<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Appearance">

        <CheckBoxPreference
            android:key="bold_text"
            android:title="Bold Text"
            android:summary="Bold text summary"
            android:defaultValue = "false" />

        <ListPreference
            android:key="font_size"
            android:title="Font Size"
            android:summary="Select font size"
            android:entries="@array/font_size_labels"
            android:entryValues="@array/fond_size_values"
            android:defaultValue="14" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Personalization">

        <EditTextPreference
            android:key="users_name"
            android:title="User's Name"
            android:summary="Type your name here" />

    </PreferenceCategory>

</PreferenceScreen>